<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="@color/primary_500" />
            <gradient android:angle="-90" android:startColor="@color/primary_500" android:endColor="@color/primary_500"  />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="@color/primary_500" />
            <solid android:color="@color/primary_500"/>
        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="@color/grey_scale_200" />
            <gradient android:angle="-90" android:startColor="@color/grey_scale_200" android:endColor="@color/grey_scale_200"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="@color/primary_500" />
            <gradient android:angle="-90" android:startColor="@color/primary_500" android:endColor="@color/primary_500" />
        </shape>
    </item>

</selector>