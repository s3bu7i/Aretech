<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="24dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/header_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/primary_50"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/dialog_title"
                        style="@style/TitleMedium_23sp_greyScale900"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:layout_marginEnd="50dp"
                        android:layout_marginStart="50dp"
                        android:layout_centerInParent="true"
                        android:ellipsize="end"
                        android:text="Anbar secimi" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mtrl_close"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/grey_scale_50"
                        app:strokeWidth="1dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_close"
                            app:tint="@color/grey_scale_900" />

                    </com.google.android.material.card.MaterialCardView>

                </RelativeLayout>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_descriptiosn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="16sp"
            android:fontFamily="@font/sf_pro_display"
            android:text=""/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mtrl_confirm"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_continue"
            android:clickable="true"
            android:focusable="true"
            android:textAllCaps="false"
            android:layout_margin="24dp"
            android:background="@drawable/btn_style_corner_round_black"
            android:textSize="16sp"
            android:fontFamily="@font/sf_pro_display"
            android:textColor="@color/white"
            />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>


