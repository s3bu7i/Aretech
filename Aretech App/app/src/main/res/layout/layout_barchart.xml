<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_client_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLient Name"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="@color/grey_scale_900"
                android:fontFamily="@font/sf_pro_display"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Body2Regular_13sp_greyScale900"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Z/ müddəti: "
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginStart="2dp"
                    android:textStyle="italic" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvWaitingMinutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 deq"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingEnd="2dp"
                    style="@style/Body2Bold_13sp_greyScale900"
                    android:textColor="@color/info_500"
                    android:textStyle="bold|italic" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_travel_dist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_travel_distance" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Body2Regular_13sp_greyScale900"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="M/dək məsafə: "
                    android:textSize="13sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tv_travel_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:paddingEnd="2dp"
                    android:text="15 km "
                    android:textColor="@color/grey_scale_900"
                    android:textStyle="italic|bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_travel_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_travel_time" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M/dək müddət: "
                    style="@style/Body2Regular_13sp_greyScale900"
                    android:textSize="13sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginStart="2dp"
                    android:textStyle="italic" />

                <TextView
                    android:lines="1"
                    android:maxLines="1"
                    android:id="@+id/tv_travel_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:paddingEnd="2dp"
                    android:text="15 deq "
                    android:textColor="@color/grey_scale_900"
                    android:textStyle="italic|bold" />

            </LinearLayout>

    </LinearLayout>

    </LinearLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barchart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>