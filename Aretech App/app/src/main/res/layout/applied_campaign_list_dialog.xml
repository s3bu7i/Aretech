<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_margin="5dp"
    android:background="@drawable/card_radius_background"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="wrap_content"
        android:layout_marginBottom="3dp"
        android:theme="@style/Body2Bold_16sp_greyScale900"
        android:text="Payiz kampaniyasi/K001"
        android:layout_marginEnd="40dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_discount"
        android:layout_below="@id/txt_desc"
        android:layout_width="wrap_content"
        android:text="En.məbləği  ="
        android:theme="@style/Body2Regular_13sp_greyScale300"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_discount_value"
        android:layout_below="@id/txt_desc"
        android:layout_width="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_toRightOf="@id/txt_discount"
        android:text="0.0"
        android:theme="@style/Body2Regular_13sp_greyScale300"
        android:textColor="@color/warning_500"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_discount_per"
        android:layout_toRightOf="@id/txt_discount_value"
        android:layout_below="@id/txt_desc"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:text="Həd.məbləği  ="
        android:theme="@style/Body2Regular_13sp_greyScale300"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_promotion"
        android:layout_toRightOf="@id/txt_discount_per"
        android:layout_below="@id/txt_desc"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="40dp"
        android:layout_width="wrap_content"
        android:text="0"
        android:theme="@style/Body2Regular_13sp_greyScale300"
        android:textColor="@color/warning_500"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/cancelled"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="5dp"
        android:visibility="gone"
        android:src="@drawable/cancelled_promotion"
        />

    <ImageView
        android:id="@+id/check"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="5dp"
        android:visibility="gone"
        android:src="@drawable/ic_check"
        app:tint="@color/primary_500" />

</RelativeLayout>
