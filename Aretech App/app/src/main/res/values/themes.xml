<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Aretech" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorTextSecondary</item>
        <item name="colorSecondaryVariant">@color/colorTextSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/primary_500</item>
        <item name="android:fontFamily">@font/sf_pro_display</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
    </style>

    <style name="Theme.ProgressBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorLogo_white_70</item>
        <item name="colorPrimaryVariant">@color/colorLogo_white_65</item>
        <item name="colorOnPrimary">@color/colorLogo_white_60</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorLogo_white_50</item>
        <item name="colorSecondaryVariant">@color/colorLogo_white_45</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false </item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/style_linearlayout_operation_top_round</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#00f</item>
    </style>
    <style name="NeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#00f</item>
    </style>
    <style name="AlertDialogThemePermissionDenied" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
    </style>
    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">@color/primary_500</item>
        <item name="hintTextAppearance">@style/TextLabel</item>

    </style>
    <style name="TextInputLayoutAppearanceCash" parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">@color/primary_500</item>
        <item name="hintTextAppearance">@style/TextLabelCash</item>

    </style>
    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey_scale_300</item>
        <item name="android:fontFamily">@font/sf_pro_display</item>
    </style>
    <style name="TextLabelCash" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey_scale_900</item>
        <item name="android:fontFamily">@font/sf_pro_display</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">16sp</item>
        <item name="android:autoSizeMaxTextSize">17sp</item>
        <item name="fontWeight">400</item>
        <item name="android:textColorHint">@color/grey_scale</item>
        <item name="android:fontFamily">@font/sf_pro_display</item>
    </style>
</resources>